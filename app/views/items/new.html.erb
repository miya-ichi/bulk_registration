<h1>商品登録</h1>

<div>
  <%= link_to '一覧へ', items_path %>
</div>

<div>
  <% if @item.errors.present? %>
    <% @item.errors.full_messages.each do |error| %>
      <li><%= error %>
    <% end %>
  <% end %>
</div>

<div>
  <%= form_with model: @item, local: true do |f| %>
    <%= f.label :code %>
    <%= f.text_field :code %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :price %>
    <%= f.text_field :price %>
    <%= f.submit '登録' %>
  <% end %>
</div>
